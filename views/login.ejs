<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {margin:0;padding:0;box-sizing:border-box;}
        body {height:100vh;width:100%;}
        .log-in {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);

            background-color: azure;
            font-size: 10px;
            padding: 20px;
            border-radius: 8px;
            border: 3px solid rgba(0,0,0,0.1);
            box-shadow: inset 0 -5px 8px rgba(0,0,0,0.4),
                        inset 0 5px 9px rgba(255,255,255,0.6),
                        0 10px 12px -5px rgba(0,0,0,0.6);;
        }

        .form-field {
            font-size: 2em;
            display: flex;
            flex-direction: column;
            margin-bottom: 15px;
        }

        label {
            margin-bottom: 8px;
        }

        input {
            height: 2rem;
            width: 300px;
            border: none;
            outline: none;
            font-size: 1.1em;
            padding-left: 3px;
            border-radius: 3px;
            background-color: #eee;
        }
        

        button {
            position: relative;
            font-size: 1.1em;
            border: none;
            outline: none;
            padding: 8px 0;
            margin-top: 20px;
            background-color: #AAE9F6;
            border-radius: 5px;
            transform: scale(1);
            transition: 0.4s linear;
            box-shadow: inset 0 -5px 8px rgba(0,0,0,0.4),
                        inset 0 5px 9px rgba(255,255,255,0.6),
                        0 2px 4px rgba(0,0,0,0.4);
        }

        button:hover {
            filter: brightness(110%);
        }

        button:active {
            transform: scale(0.98);
        }

        button::after {
            position: absolute;
            content: '';
            width: 95%;
            height: 50%;
            border-radius: 8px;
            top: 5px;
            left: 50%;
            transform: translate(-50%, 0);
            background-image: linear-gradient(to bottom, rgba(255,255,255,0.6), rgba(255,255,255,0.3), transparent);
        }

        .registered-users {
            position: absolute;
            top: 50%;
            left: 20px;
            transform: translate(0, -50%);
            background-color: violet;
            padding: 10px;
            border-radius: 6px;
            font-family: monospace;
        }

        .registered-users .user {
            padding: 10px;
            background-color: white;
            color: #222;
            margin: 0 10px;
        }

        .username-user, .password-user {
            display: flex;
            font-size: 1.2rem;
        }

        .key {
            margin-right: 6px;
            color: salmon;
            font-weight: 700;
        }

        .value {
            color: rgba(0,0,0,0.5);
        }
    </style>
    <title>Document</title>
</head>
<body>
<div class="registered-users">
    <% users.forEach(user => { %>
        <div class="user">
            <div class="username-user">
                <div class="key">Username:</div>
                <div class="value"><%= user.username %></div>
            </div>
            <div class="password-user">
                <div class="key">Password:</div>
                <div class="value"><%= user.password %></div>
            </div>
        </div>
    <% }) %>
</div>
<div class="log-in">
    <form action="/login" method="POST">
        <div class="form-field">
            <label for="username" >Username</label>
            <input name="username" id="username" class="username" type="text">
        </div>
        <div class="form-field">
            <label for="password" >Password</label>
            <input name="password" id="password" class="password" type="password">
        </div>
        <div class="form-field">
            <button type="submit">Log in</button>
        </div>
    </form>
</div>
<script>

</script>    
</body>
</html>